<%- include("partials/header.ejs") %>
<div class="min-h-screen flex flex-col items-center justify-center bg-gray-900 text-white px-4">
    <h1 class="text-6xl font-bold text-red-500 mb-16">Tournament Registration</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-16 w-full max-w-7xl">
        <!-- Step 1: Connect to WiFi -->
        <div class="flex flex-col items-center space-y-8">
            <div class="text-center">
                <h2 class="text-4xl font-bold mb-4">Step 1</h2>
                <p class="text-2xl">Connect to WiFi Network</p>
            </div>
            <div class="bg-white p-8 rounded-lg w-64 h-64 flex items-center justify-center">
                <img src="<%= wifiQR %>" alt="WiFi QR Code" class="w-full h-full">
            </div>
        </div>

        <!-- Step 2: Register -->
        <div class="flex flex-col items-center space-y-8">
            <div class="text-center">
                <h2 class="text-4xl font-bold mb-4">Step 2</h2>
                <p class="text-2xl">Register</p>
            </div>
            <div class="bg-white p-8 rounded-lg w-64 h-64 flex items-center justify-center">
                <img src="<%= registrationQR %>" alt="Registration QR Code" class="w-full h-full">
            </div>
        </div>

        <!-- Step 3: Wait -->
        <div class="flex flex-col items-center space-y-8">
            <div class="text-center">
                <h2 class="text-4xl font-bold mb-4">Step 3</h2>
                <p class="text-2xl">Wait for tournament to start</p>
            </div>
            <div class="flex items-center justify-center">
                <i class="ri-timer-line text-8xl text-red-500"></i>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer.ejs") %>